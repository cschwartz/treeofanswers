<!DOCTYPE html>
<html>
  <head>
    <title>Treeofanswers</title>
    <%= csrf_meta_tags %>
    <%= action_cable_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-light bg-faded">
      <a class="navbar-brand" href="#">Tree of Answers</a>
      <ul class="nav navbar-nav">
        <%= nav_link 'Home', root_path %>
        <%= nav_link 'New request', new_request_path %>
        <%= nav_link 'Requests', requests_path %>
      </ul>

      <ul class="nav navbar-nav pull-xs-right">
        <% if user_signed_in? %>
          <li class='nav-item'>
            <%= link_to 'Log out', destroy_user_session_path, method: :delete, class: 'nav-link' %>
          </li>
        <% else %>
          <%= nav_link 'Sign up', new_user_registration_path %>
          <%= nav_link 'Log in', new_user_session_path %>
        <% end %>

      </ul>
    </nav>

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <div class="container-fluid">
      <%= yield %>
    </div>
  </body>
</html>
